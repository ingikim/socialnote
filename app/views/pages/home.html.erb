<div class="hero-unit">
	<h1>Welcome to Social Note!</h1>
	<p>
		You've found the home page for the
		<%= link_to "Social Note", "http://www.facebook.com" %>
		application.
	</p>
	<div id="user-widget">
		 <% if current_user %>
		   Welcome <strong><%= current_user.name %></strong>!
	    <%= link_to "Sign out", signout_path, class: "btn btn-primary btn-large", id: "sign_out" %>
	  <% else %>
	    <%= link_to "Sign in with Facebook", "/auth/facebook", class: "btn btn-primary btn-large", id: "sign_in" %>
	  <% end %>
	</div>
</div>